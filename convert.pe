#!/usr/bin/env fontforge
Open($2)
Reencode("unicode")
SetFontNames($3+"SmallCaps", $4+" SmallCaps", $4+" SmallCaps "+$5, $5, "",$fontversion)
Generate("newtxtt-"+$6+"-sc.otf")
Close()
Open($1)
Reencode("unicode")
SetFontNames($3, $4, $4+" "+$5, $5, "",$fontversion)
Generate("newtxtt-"+$6+"-main.otf")
Close()
